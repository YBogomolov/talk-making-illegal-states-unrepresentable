{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "commonjs",
    "allowJs": true,
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "target": "ES2020",
    "outDir": ".build",
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true
  },
  "include": ["**/*.ts"],
  "exclude": [
    "node_modules/**/*",
    ".vscode/**/*"
  ]
}
